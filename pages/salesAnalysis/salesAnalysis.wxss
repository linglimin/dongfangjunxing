.sales_analysis{
    overflow: scroll;
}
.search_form{
    position: fixed;
    bottom: 0;
    width: 90%;
    padding: 0 5%;
    height: 150rpx;
    border-top: 4rpx solid #eee;
    margin-top: 20rpx;
    background: #090738;
}
.picker_line{
    width: 30%;
    height: 150rpx;
    float: left;
    margin-right:20rpx;
    color: #000;
    background: #090738;
}
.picker{
    width: 80%;
    padding: 0 10%;
    height: 60rpx;
    margin: 40rpx 0;
    line-height: 60rpx;
    background: #fff;
}
.search{
    width:140rpx;
    height: 60rpx;
    float: right;
    line-height: 60rpx;
    margin-right: 0rpx;
    margin-top:40rpx;
    text-align: center;
    background: #eee;
    border-radius: 10rpx;
    color: #222;
}
.data_table{
    width: 92%;
    margin:30rpx 4% 220rpx 4%;
    border-top:1px solid #eee;
    border-left:1px solid #eee;
    border-right: 1px solid #eee;
    background: rgba(42, 37, 90, 0.7);
}
.data_table .table_head{
    display: flex;
    flex-wrap: nowrap;
    justify-content:center;
    color: #fff;
    border-bottom: 1px solid #eee;
    font-weight: bold;
}
.data_table .table_head view{
    width: 16.5%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 24rpx;
}
.data_table .table_body .tr,.data_table .table_bottom{
    display: flex;
    flex-wrap: nowrap;
    justify-content:space-around;
    border-bottom: 1px solid #eee;
}
.data_table .table_body .tr view,.data_table .table_bottom view{
    width: 16.5%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
}
.data_table .table_head .br,.data_table .table_body .br, .data_table .table_bottom .br{
    border-right: 1px solid #ddd;
}
.table_bottom{
    border-top:1px solid #ddd;
}