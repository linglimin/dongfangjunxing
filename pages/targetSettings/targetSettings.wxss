.target_settings{

}
.bar{
    width: 690rpx;
    height: 100rpx;
    padding: 0 30rpx;
    background: #fff;
}
.mt20{
    margin-top:10rpx;
}
.mb20{
    margin-bottom: 20rpx;
}
.mb6{
    margin-bottom: 6rpx;
}
.bb{
    border-bottom:2rpx solid #ccc;
}
.left_text{
    font-size: 40rpx;
    line-height: 100rpx;
    color: #555;
    float: left;
}
.picker_line{
    width: 50%;
    height: 100rpx;
    line-height: 100rpx;
    float: right;
    color: #222;
    text-align: right;
}
.picker_left{
    width: 50%;
    height: 100rpx;
    line-height: 100rpx;
    float: left;
    color: #222;
    text-align: left;
}
.picker_right{
    width: 50%;
    height: 100rpx;
    line-height: 100rpx;
    float: right;
    color: #222;
    text-align: right;
}
.text{
    width: 90%;
    padding: 0 5%;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    text-align: right;
    font-size: 26rpx;
}
.remarks{
    width: 710rpx;
    padding: 20rpx;
    background: #fff;
}
.remarks_title{
    width: 710rpx;
    font-size: 40rpx;
    color: #666;
}
.remarks textarea{
    width: 690rpx;
    color: #222;
    padding: 10rpx;
    height: 200rpx;
    font-size: 26rpx;
}
.add_pic{
    width: 710rpx;
    padding: 20rpx;
    background: #fff;
}
.add_pic_title{
    width: 710rpx;
    font-size: 40rpx;
    color: #666;
}
.choose_image{
    width: 200rpx;
    height: 200rpx;
}
.choose_image image{
    width: 100%;
    height: 100%;
}
.submit_btn{
    width: 710rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    font-size: 40rpx;
    text-align: center;
    border-radius: 10rpx;
    background: #0099ff;
}
.target_input{
    height: 80rpx;
    padding: 10rpx 20rpx;
    text-align: right;
}