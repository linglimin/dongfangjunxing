/**app.wxss**/
.container {
    height: 100vh;
    box-sizing: border-box;
    background: #090738;
    color: #fff;
    overflow: auto;
} 
.main{
    padding: 50rpx 25rpx;
}
.clearfix::after{
    content:".";display:block;height:0;clear:both;visibility:hidden
}
.fl{
    float: left;
}
.fr{
    float: right
}
.single-text{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
